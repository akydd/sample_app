<% provide(:title, 'Users') %>
<h1>Users</h1>

<div class="row">
  <div class="span6 offest3">
    <%= form_tag users_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
      <%= submit_tag "Search", class: "btn btn-small btn-primary", name: nil %>
    <% end %>
  </div>
</div>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
